<%= turbo_frame_tag 'main_container' do %>
  <div class="row g-3">
    <div class="col-12">
      <h1>List of all Accounts</h1>
    </div>
    <div class="col-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-primary">
            <th scope="col">VAT</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">City / Area</th>
            <th scope="col">ZIP Code</th>
            <th scope="col">Delete</th>

          </tr>
        </thead>
        <tbody>
          <% Account.all.each do |account| %>
          <tr>
            <th scope="row">
              <%= link_to edit_account_path(account), class: 'text-decoration-none' do %>
                <i class="fa-solid fa-pen-to-square"></i>
                <%= account.vat %>
              <% end %>
            </th>
            <td>
              <%= link_to account_path(account), class: 'text-decoration-none' do %>
                <i class="fa-solid fa-eye"></i>
                <%= account.name %>
              <% end %>
            </td>
            <td><%= account.address %></td>
            <td><%= account.city %></td>
            <td><%= account.zipcode %></td>
            <td>
              <%= button_to account_path(account), method: :delete, data: { turbo_confirm: 'Are you sure;' }, class: 'delete-btn' do %>
                <i class="fa-solid fa-circle-xmark"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>




